			public void actionPerformed(ActionEvent e) {
				try{
					String query = "select * from Patient";
					PreparedStatement pstatement = connect.prepareStatement(query);
					ResultSet rs = pstatement.executeQuery();
					rs.close();
					pstatement.close();
				}
				catch(Exception ex){
					ex.printStackTrace();
				}
			}
		});
