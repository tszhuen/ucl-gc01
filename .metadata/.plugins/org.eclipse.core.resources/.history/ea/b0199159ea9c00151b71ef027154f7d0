				try{
					String query = "insert into Patient (appointmentDate,appointmentTime,doctor,medicalCondition,comment) values (?,?,?,?,?)";
					PreparedStatement pstatement = connect.prepareStatement(query);
					
					
					removeAll();
					revalidate();
					repaint();
					
				}
