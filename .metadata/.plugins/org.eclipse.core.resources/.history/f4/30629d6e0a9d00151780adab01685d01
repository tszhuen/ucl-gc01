					String query = "Update Patient set firstName='"+firstName.getText()+"', "
								+ "surname='"+surname.getText()+"', "
										+ "dob='"+dob.getText()+"', "
												+ "address='"+address.getText()+"', "
														+ "city='"+city.getText()+"', "
